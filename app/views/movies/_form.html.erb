<%= form_with(model: movie, local: true) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, autofocus: true %>

  <%= f.label :released_at %>
  <%= f.date_field :released_at %>

  <%= f.label :rating %>
  <%= f.number_field :rating %>

  <%= f.label :description %>
  <%= f.text_area :description, rows: 5 %>

  <%= f.submit %>
<% end %>