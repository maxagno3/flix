<% @movies.each do |movie| %>
  <section class="movie">
    <div class="image">
      <%= image_tag movie.poster_image %>
    </div>
    <div class="summary">
      <h2><%= link_to movie.name, movie_path(movie) %></h2>
      <h3><%= format_date(movie) %></h3>
      <span class="stars">
        <%= format_rating(movie) %>
      </span>
      <p><%= truncate(movie.description, length: 55, separator: " ") %></p>
      <h4><%= movie.genre %></h4>
    </div>
  </section>
<% end %>

<% if current_user_admin? %>
  <section class="admin">
    <%= link_to "Create Movie", new_movie_path, class: "button" %>
  </section>
<% end %>
